generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                String   @id @default(uuid())
  aggregateId       String   @map("aggregate_id")
  aggregateRevision Int      @map("aggregate_revision")
  type              String
  createdAt         DateTime @default(now()) @map("created_at")
  data              Json

  @@index([aggregateId])
  @@map("events")
}

enum BookStatus {
  AVAILABLE
  BORROWED
  DAMAGED
  REMOVED
}

model Book {
  bookId    String     @id @default(uuid()) @map("book_id")
  title     String
  author    String
  isbn      String
  status    BookStatus
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("books")
}

model Snapshot {
  id          String   @id @default(uuid())
  aggregateId String   @map("aggregate_id")
  revision    Int
  state       Json
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([aggregateId])
  @@map("snapshots")
}
