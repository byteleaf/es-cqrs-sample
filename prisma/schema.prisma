generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                String   @id @default(uuid())
  aggregateId       String   @map("aggregate_id")
  aggregateRevision Int      @map("aggregate_revision")
  type              String
  timeObserved      DateTime @map("time_observed")
  timeOccurred      DateTime @map("time_occurred")
  data              Json

  @@map("events")
}

enum BookStatus {
  AVAILABLE
  BORROWED
  DAMAGED
  REPAIRED
  REMOVED
}

model Book {
  id        String     @id @default(uuid())
  title     String
  author    String
  isbn      String
  status    BookStatus
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("books")
}
